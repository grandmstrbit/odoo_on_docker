<odoo>

	<record id="view_sro_contacts_contract_form" model="ir.ui.view">
	    <field name="name">sro.contacts.contract.form</field>
	    <field name="model">sro.contacts.contract</field>
	    <field name="arch" type="xml">
	        <form string="SRO Contacts Contract">
	            <group>
	                <field name="tender_type"/>
	                <field name="tender_description"/>
	                <field name="tender_contact_info"/>
	                <field name="tender_member_number"/>
	                <field name="tender_short_name"/>
	            </group>
	            <!-- Полностью удаляем поле -->
	            <xpath expr="//field[@name='partner5_id']" position="replace"/>
	        </form>
	    </field>
	</record>

</odoo>