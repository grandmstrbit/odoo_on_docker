<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Форма (form view) для res.partner -->
    <record id="view_partner_form_custom" model="ir.ui.view">
        <field name="name">res.partner.form.custom</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <!-- Скрываем встроенные поля -->
            <xpath expr="//div[@class='o_address_format']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='vat']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='function']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='phone']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='mobile']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='user_ids']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='email']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='website']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='title']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='active_lang_count']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//span[@name='address_name']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='lang']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='category_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//page[@name='internal_notes']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//page[@name='sales_purchases']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>    
            <xpath expr="//page[@name='contact_addresses']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='is_company']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='commercial_partner_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>   
            <xpath expr="//field[@id='individual']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='parent_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//group[@name='misc']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            

       <!-- <group position="before">
                <group col="2">
                    <field name="registration_number" string="Регистрационный номер" 
                        colors="red:name='registration_number'" readonly="1"
                        style="font-size: 24px; font-weight: bold;"/>
                    <field name="short_name" string="Сокращенное наименование" 
                        colors="red:name='short_name'" readonly="1" 
                        style="font-size: 24px; font-weight: bold;"/> 
                </group>
            </group>
        -->
            <group position="before">
                <group colspan="2">
                    <field name="create_date" readonly="1" widget="badge" options="{'class': 'badge-primary'}"/>
                    <field name="write_date" readonly="1" widget="badge" options="{'class': 'badge-info'}"/>
                    <button name="action_export_contact_docx" type="object"
                        string="Скачать DOCX" class="oe_highlight"/> 
                </group>
            </group>
            
            <group position="inside">
                <group string="Регистрационные данные">
                    <field string="Регистрационный номер" name="registration_number" placeholder="например, 21-С-0001-1209"/>
                    <field name="short_name" placeholder="например, ООО 'СУ-Инкост'"/>
                    <field name="full_name"/>
                    <field name="inn"/>
                    <field name="ogrn"/>
                    <field name="registration_date"/>
                </group>
            </group>

            <group position="inside">
                <group string="Сведения о членстве">
                    <field name="sro_membership_compliance" widget="dropdown" 
                        decoration-danger="sro_membership_compliance == 'suspended'"
                        decoration-success="sro_membership_compliance == 'active'"/>
                    <field name="sro_membership_status" widget="dropdown"
                        decoration-danger="sro_membership_status == 'suspended'"
                        decoration-success="sro_membership_status == 'active'"/>
                    <field name="sro_registration_date"/>
                    <field name="sro_admission_basis"/>
                </group>
            </group>

            <group position="inside">
                <group string="Компенсационные фонды">
                    <field name="compensation_fund_vv_amount"/>
                    <field name="vv_responsibility_level" placeholder="например, Третий уровень ответсвтенности"/>
                    <field name="contract_work_cost" placeholder="например, не превышает три миллиарда рублей"/>
                    <field name="compensation_fund_odo_amount"/>
                    <field name="odo_responsibility_level" placeholder="например, Третий уровень ответсвтенности"/>
                    <field name="max_obligation_amount" placeholder="например, не превышает три миллиарда рублей"/>
                </group>
            </group>

            <group position="inside">
                <group string="Руководство">
                    <field name="executive_authority"/>
                </group>
            </group>

            <group position="inside">
                <group string="Контактные данные">
                    <field name="phone_sro" placeholder="(8352) 640-328, факс: (8352) 640-343"/>
                    <field name="zip" placeholder="например, 428003"/>
                    <field name="country_id"/>
                    <field name="state_id"/>
                    <field name="city" placeholder="например, Чебоксары"/>
                    <field name="street" placeholder="например, шоссе Марпосадское"/> 
                    <field name="street2"/>
                </group>
            </group>

            <group position="inside">
                <group string="Страхование">
                    <field name="insurer_info" 
                        invisible="1"/>

                    <field name="insurer_name" readonly="0"/>
                    <field name="insurer_license_number" readonly="0"/>
                    <field name="insurer_address" readonly="0"/>
                    <field name="insurer_phone" readonly="0"/>
                    <field name="insurer_website" readonly="0"/>
                    <field name="insurer_email" readonly="0"/>

                    <field name="insurance_contract_number"/>
                    <field name="insurance_contract_expiry"/>
                    <field name="insurance_amount"/>
                </group>
            </group>

            <!--Наличие права на выполнение работ-->
            <xpath expr="//notebook" position="inside">
                <page string="Наличие права на выполнение работ">
                    <field name="sro_contact2_ids">
                        <tree string="Сведения о наличии прав на выполнение работ">
                            <button name="action_export_work_docx"
                                type="object"
                                string="Скачать DOCX"
                                class="oe_highlight"/>
                            <field name="number"/>
                            <field name="right_status" widget="dropdown"
                        decoration-danger="right_status == 'suspended'"
                        decoration-success="right_status == 'active'"/>
                            <field name="right_effective_date"/>
                            <field name="right_basis"/>
                            <field name="construction_object" widget="dropdown"
                        decoration-danger="construction_object == 'no'"
                        decoration-success="construction_object == 'yes'"/>
                            <field name="hazardous_objects" widget="dropdown"
                        decoration-danger="hazardous_objects == 'no'"
                        decoration-success="hazardous_objects == 'yes'"/>
                            <field name="nuclear_objects" widget="dropdown"
                        decoration-danger="nuclear_objects == 'no'"
                        decoration-success="nuclear_objects == 'yes'"/>
                            <field name="odo_right" widget="dropdown"
                        decoration-danger="odo_right == 'no'"
                        decoration-success="odo_right == 'yes'"/>
                            
                        </tree>
                    </field>
                </page>
            </xpath>
            <!--Сведения о дисциплинарных производствах-->
            <xpath expr="//notebook" position="inside">
                <page string="Сведения о дисциплинарных производствах">
                    <field name="sro_contact3_ids">
                        <tree string="Сведения о дисциплинарных производствах">
                            <button name="action_export_discipline_docx"
                                type="object"
                                string="Скачать DOCX"
                                class="oe_highlight"/>
                            <field name="disciplinary_basis"/>
                            <field name="disciplinary_start_date"/>
                            <field name="disciplinary_decision"/>
                            <field name="disciplinary_decision_date"/>
                        </tree>
                    </field>
                </page>
            </xpath>
            <!--Сведения о результатах проведенных проверок-->
            <xpath expr="//notebook" position="inside">
                <page string="Сведения о результатах проведенных проверок">
                    <field name="sro_contact4_ids">
                        <tree string="Сведения о результатах проведенных проверок">
                            <button name="action_export_inspection_docx" type="object" string="Скачать DOCX" class="oe_highlight"/>
                            <field name="inspection_member_number"/>
                            <field name="inspection_act_date"/>
                            <field name="inspection_month_year"/>
                            <field name="inspection_type"/>
                            <field name="inspection_form"/>
                            <field name="inspection_law_violations"/>
                            <field name="inspection_internal_violations"/>
                            <field name="inspection_contract_violations"/>
                            <field name="inspection_result"/>
                            <field name="inspection_disciplinary_measures"/>
                            <field name="inspection_measures_list"/>
                        </tree>
                    </field>
                </page>
            </xpath>
            <!--Предложения подрядов-->
            <xpath expr="//notebook" position="inside">
                <page string="Предложения подрядов">
                    <field name="sro_contact5_ids">
                        <tree string="Предложения подрядов">
                            <button name="action_export_contract_docx" type="object" string="Скачать DOCX" class="oe_highlight"/>
                            <field name="tender_type"/>
                            <field name="tender_description"/>
                            <field name="tender_contact_info"/>
                            <field name="tender_member_number"/>
                            <field name="tender_short_name"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>