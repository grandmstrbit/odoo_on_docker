<odoo>

	<record id="sro_contacts_construction_form" model="ir.ui.view">
	    <field name="name">sro.contacts.construction.form</field>
	    <field name="model">sro.contacts.construction</field>
	    <field name="arch" type="xml">
	        <form string="SRO Contacts Work">
	            <group>
	                <field name="number" string="№:"/>
	                <field name="decision_date" string="Дата решения:"/>
	                <field name="management_decision" string="Решение органов управления (право):"/>
	                <field name="decision_basis" string="Основание решения:"/>
	            </group>

	            <!-- Полностью удаляем поле -->
	            <xpath expr="//field[@name='partner6_id']" position="replace"/>
	        </form>
	    </field>
	</record>

</odoo>